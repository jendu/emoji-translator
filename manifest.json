{
  "name":"Emoji Translator",
  "version":"1.0",
  "description":"Translates emotes into their respective descriptions.",
  "author":"Jennifer Du",
  "manifest_version":2,

  "permissions":[
    "storage",
    "activeTab",
    "tabs",
    "declarativeContent"
  ],
  "web_accessible_resources":[
    "scripts/emojiDict.json",
    "scripts/textDict.json"
  ],
  "content_scripts":[
    {
      "matches":["*://*/*"],
      "js":["scripts/jquery-3.4.1.min.js","scripts/content.js"],
      "run_at":"document_end"
    }
  ],
  "background":{
    "scripts":["scripts/jquery-3.4.1.min.js","scripts/bg.js"],
    "persistent":false
  },
  "page_action":{
    "default_title":"Emoji Translator",
    "default_popup":"popup/popup.html",
    "default_icon":{
      "16":"img/logo16.png",
      "32":"img/logo32.png",
      "48":"img/logo48.png",
      "128":"img/logo128.png"
    }
  }
}
